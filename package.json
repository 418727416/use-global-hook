    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-core": "^6.26.3",
    "gh-pages": "^2.0.1",
    "parcel": "^1.12.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^5.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
